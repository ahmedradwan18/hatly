    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FAFAF7"
        tools:context=".CustomerProfile">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_user_img"
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="64dp"
            android:src="@drawable/karim"
            app:civ_border_width="2dp"
            app:civ_border_color="#000"
            />
        <TextView
            android:id="@+id/profile_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/profile_user_img"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="18sp"
            android:textColor="#000"
            android:text="Karim El Sayed"
            android:layout_marginTop="24dp"
            android:textStyle="bold"
            android:fontFamily="monospace"/>
        <androidx.cardview.widget.CardView
            android:id="@+id/profile_email_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFF"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/profile_user_name"
            android:layout_marginTop="24dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp">
                <ImageView
                    android:id="@+id/profile_email_img"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="24dp"
                    android:src="@drawable/ic_profile_email_box"
                    android:scaleType="centerCrop"/>

                <TextView
                    android:id="@+id/profile_user_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:text="karim@gmail.com"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@id/profile_email_img"
                    app:layout_constraintStart_toEndOf="@id/profile_email_img"
                    app:layout_constraintTop_toTopOf="@id/profile_email_img" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/profile_address_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFF"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/profile_email_card"
            android:layout_marginTop="12dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp">
                <ImageView
                    android:id="@+id/profile_address_img"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="24dp"
                    android:src="@drawable/ic_address_box"
                    android:scaleType="centerCrop"/>

                <TextView
                    android:id="@+id/profile_user_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="monospace"
                    android:text="Your Address"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:textSize="18sp"
                    app:layout_constraintStart_toEndOf="@id/profile_address_img"
                    app:layout_constraintTop_toTopOf="@id/profile_address_img"
                    app:layout_constraintBottom_toBottomOf="@id/profile_address_img"
                    android:layout_marginStart="24dp"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/profile_phone_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFF"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/profile_address_card"
            android:layout_marginTop="12dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp">
                <ImageView
                    android:id="@+id/profile_phone_img"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="24dp"
                    android:src="@drawable/ic_profile_phone_box"
                    android:scaleType="centerCrop"/>

                <TextView
                    android:id="@+id/profile_user_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="monospace"
                    android:text="01017268676"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:textSize="18sp"
                    app:layout_constraintStart_toEndOf="@id/profile_phone_img"
                    app:layout_constraintTop_toTopOf="@id/profile_phone_img"
                    app:layout_constraintBottom_toBottomOf="@id/profile_phone_img"
                    android:layout_marginStart="24dp"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/profile_national_id_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFF"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/profile_phone_card"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp">
                <ImageView
                    android:id="@+id/profile_national_id_img"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="24dp"
                    android:src="@drawable/ic_profile_id_card_box"
                    android:scaleType="centerCrop"/>

                <TextView
                    android:id="@+id/profile_user_national_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="monospace"
                    android:text="25252525252525"
                    android:inputType="number"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:textSize="18sp"
                    app:layout_constraintStart_toEndOf="@id/profile_national_id_img"
                    app:layout_constraintTop_toTopOf="@id/profile_national_id_img"
                    app:layout_constraintBottom_toBottomOf="@id/profile_national_id_img"
                    android:layout_marginStart="24dp"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>
</ScrollView>