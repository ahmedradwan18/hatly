<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/dialogue_back">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/dialogue_back"
        android:gravity="center_horizontal"
        tools:ignore="MissingConstraints"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:text="Feed Back â™¥"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            tools:ignore="HardcodedText" />
        <View
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#fff" />


        <EditText
            android:id="@+id/feedbacks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFF"
            android:hint="Write Feed Back about us here"
            android:backgroundTint="#FFF"
            android:textColorHint="#FFF"/>
        <Button
            android:id="@+id/sendFeed"
            android:padding="15dp"
            android:backgroundTintMode="multiply"
            android:drawablePadding="20dp"
            android:drawableLeft="@drawable/ic_give_feedback"
            android:layout_width="150dp"
            android:layout_height="65dp"
            android:text="Send"
            android:textSize="18dp"
            android:textAllCaps="false"
            android:textAlignment="textStart"
            android:background="@drawable/dialog_btn_style"
            android:textStyle="bold"
            tools:ignore="HardcodedText,RtlHardcoded" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>