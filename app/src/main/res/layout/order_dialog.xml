<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/dialogue_back">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/dialogue_back"
        android:gravity="center_horizontal"
        tools:ignore="MissingConstraints"
        >
        <TextView
            android:id="@+id/dialogue_desc_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:text="Order Description"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            tools:ignore="HardcodedText" />
        <View
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#fff" />
        <LinearLayout
            android:orientation="horizontal"
            android:weightSum="2"
            android:padding="10dp"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:gravity="center_horizontal"
                android:layout_weight="1"
                android:id="@+id/dialogue_price_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:textStyle="bold"
                android:text="Order Price"
                android:textSize="18sp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                tools:ignore="HardcodedText" />
            <TextView
                android:gravity="center_horizontal"
                android:layout_weight="1"
                android:id="@+id/dialogue_fare_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:textStyle="bold"
                android:text="Order Fare"
                android:textSize="18sp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                tools:ignore="HardcodedText" />
        </LinearLayout>

        <Button
            android:id="@+id/dialogue_location_btn"
            android:padding="20dp"
            android:drawableLeft="@drawable/ic_location"
            android:textAlignment="textStart"
            android:drawablePadding="20dp"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:text="Show Order Location"
            android:textAllCaps="false"
            android:background="@drawable/dialog_btn_style"
            android:backgroundTintMode="multiply"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            tools:ignore="HardcodedText,RtlHardcoded" />
        <Button
            android:id="@+id/dialogue_request_btn"
            android:padding="20dp"
            android:backgroundTintMode="multiply"
            android:drawablePadding="20dp"
            android:drawableLeft="@drawable/ic_request"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:text="Request Order"
            android:textAllCaps="false"
            android:textAlignment="textStart"
            android:background="@drawable/dialog_btn_style"
            android:textStyle="bold"
            tools:ignore="HardcodedText,RtlHardcoded" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>